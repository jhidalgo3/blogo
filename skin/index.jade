extends layout

block body
  .content.blog
    .container
      .row
        .offset2.span8
          .posts
            each item in latest

              //
                 Each posts should be enclosed inside "entry" class" 

              .entry
                h2
                  a(href='#{item.url}') #{item.title}
                //
                   Meta details 
                .meta
                  - var pubdate = item.date.toMoment()
                  - var datetimeFormat = pubdate.format('YYYY-MM-DDTHH:mm')
                  - var humanFormat = pubdate.format('DD.MM.YYYY HH:mm')
                  i.icon-calendar
                  | #{humanFormat}

                  span.pull-right
                    i.icon-comment
                    a(href='#{item.url}#disqus_thread') Comments

                //
                   Para 
                div !{item.tldr || item.content}
                //
                   Read more 
                .button
                  a(href='#{item.url}') Read all...
            .paging
              a.older(href="/archive.html") Read older posts...

