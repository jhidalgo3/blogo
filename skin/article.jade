extends layout

block body
  .content.blog
    .container
      .row
        .offset2.span8
          .posts
            //
               Each posts should be enclosed inside "entry" class" 
            //
               Post one 
            .entry
              h2
                a(href='#')= title
              //
                 Meta details 
              .meta
                - var pubdate = date.toMoment()
                - var datetimeFormat = pubdate.format('YYYY-MM-DDTHH:mm')
                - var humanFormat = pubdate.format('DD.MM.YYYY HH:mm')
                i.icon-calendar
                | #{humanFormat}
                
                span.pull-right
                  i.icon-comment
                  a(href='#{url}#disqus_thread') Comments

              //
                 Para 
              div !{content}
              hr
              div(id="disqus_thread")
